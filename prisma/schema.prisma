datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Tipo {
  ADMIN
  CLIENTE
}

model Usuario {
  id        Int      @id @default(autoincrement())
  nome      String
  email     String   @unique // ✅ Força UNIQUE no email (sync vai adicionar constraint)
  telefone  String?
  senha     String
  tipo      String   @default("CLIENTE") // ✅ String simples, não enum. Default "CLIENTE"
  cpf       String? // Opcional
  pedidos   Pedido[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("Usuario") // Nome da tabela no banco
}

model Produto {
  id        Int             @id @default(autoincrement())
  nome      String
  descricao String
  preco     Float
  imagem    String
  marca     String
  itens     PedidoProduto[]
}

model Pedido {
  id        Int             @id @default(autoincrement())
  usuarioId Int
  usuario   Usuario         @relation(fields: [usuarioId], references: [id])
  itens     PedidoProduto[]
  status    String          @default("PENDENTE")
  createdAt DateTime        @default(now())
}

model PedidoProduto {
  id         Int @id @default(autoincrement())
  pedidoId   Int
  produtoId  Int
  quantidade Int

  pedido  Pedido  @relation(fields: [pedidoId], references: [id])
  produto Produto @relation(fields: [produtoId], references: [id])
}
