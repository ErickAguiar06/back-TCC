datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}


enum Tipo {
  ADMIN
  CLIENTE
}

model Usuario {
  id       Int      @id @default(autoincrement())
  nome     String
  email    String   @unique
  telefone String
  senha    String
  tipo     Tipo     @default(CLIENTE) // padrão será CLIENTE
  pedidos  Pedido[]
}

model Produto {
  id        Int              @id @default(autoincrement())
  nome      String
  descricao String
  preco     Float
  alt       String
  itens     PedidoProduto[]
}

model Pedido {  
  id         Int       @id @default(autoincrement())
  usuarioId  Int
  usuario    Usuario   @relation(fields: [usuarioId], references: [id])
  itens      ItemPedido[]
  status     String    @default("PENDENTE")
  createdAt  DateTime  @default(now())
}

model PedidoProduto {
  id         Int     @id @default(autoincrement())
  pedidoId   Int
  produtoId  Int
  quantidade Int

  pedido     Pedido  @relation(fields: [pedidoId], references: [id])
  produto    Produto @relation(fields: [produtoId], references: [id])
}
